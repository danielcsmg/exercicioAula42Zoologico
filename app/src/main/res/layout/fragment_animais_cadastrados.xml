<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastro.AnimaisCadastradosFragment">

    <ImageView
        android:id="@+id/ivAnimal"
        android:layout_width="@dimen/dimen_86"
        android:layout_height="@dimen/dimen_86"
        android:contentDescription="@string/imagem_pata"
        android:src="@drawable/animal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNomeAnimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_text_18"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivAnimal"
        app:layout_constraintStart_toEndOf="@+id/ivAnimal"
        app:layout_constraintTop_toTopOf="@+id/ivAnimal"
        tools:text="@string/nome_animal" />

    <TextView
        android:id="@+id/tvDescricaoAnimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_text_12"
        app:layout_constraintStart_toStartOf="@+id/ivAnimal"
        app:layout_constraintTop_toBottomOf="@+id/ivAnimal"
        tools:text="@string/nome_animal" />

</androidx.constraintlayout.widget.ConstraintLayout>