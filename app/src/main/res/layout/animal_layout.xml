<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/diman_4"
    android:id="@+id/cvAnimal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivAnimal"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:contentDescription="@string/imagem_pata"
            android:src="@drawable/animal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNomeAnimal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_text_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivAnimal"
            app:layout_constraintStart_toEndOf="@+id/ivAnimal"
            app:layout_constraintTop_toTopOf="@+id/ivAnimal"
            tools:text="@string/nome_animal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>